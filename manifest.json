{
    "name": "Page load Time Tracker",
    "version": "0.2",
    "manifest_version": 2,
    "description": "Displays page load time in the toolbar",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Page Load Time Tracker"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }],
    "permissions": [
      "activeTab",
      "storage",
      "tabs",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ]
}
  